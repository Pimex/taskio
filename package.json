{
  "name": "taskio",
  "version": "0.0.1",
  "description": "Scheduled tasks system",
  "main": "./dist/index.js",
  "scripts": {
    "lint": "standard",
    "test": "NODE_ENV=test ava -v -s",
    "build": "babel src --out-dir dist",
    "dev:test": "NODE_ENV=test npm run build && npm run test -- -w",
    "server:start": "npm run build && node ./dist/server",
    "server:init": "npm run build && pm2 start ./dist/server.js --name taskio-server",
    "cover": "nyc npm run test",
    "start": "node ./dist/server"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Pimex/taskio.git"
  },
  "keywords": [
    "task"
  ],
  "author": "jquiceno",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Pimex/taskio/issues"
  },
  "homepage": "https://github.com/Pimex/taskio#readme",
  "ava": {
    "require": [
      "@babel/register"
    ]
  },
  "devDependencies": {
    "@babel/register": "^7.0.0",
    "ava": "^1.0.1",
    "delay": "^4.1.0",
    "nyc": "^13.1.0",
    "standard": "^12.0.1",
    "uuid": "^3.3.2"
  },
  "dependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "boom": "^7.3.0",
    "getfig": "0.0.3",
    "good": "^8.1.2",
    "good-console": "^7.1.0",
    "hapi": "^18.0.0",
    "moment": "^2.24.0",
    "mongodb": "^3.1.13",
    "pm2": "^3.2.9",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "schemio": "^0.1.4"
  }
}
